<div class="container">
  <div class="col-md-6">
    <%= form_for @post, html: { multipart: true, class: "form-horizontal" } do |f| %>
      <div class="form-group">
        <%= f.label :title, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :title, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :description, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_area :description, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :tag_names, 'Tags', class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :tag_names, class: "form-control", data: { role: 'tagsinput'} %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :image, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.file_field :image %>
        </div>
      </div>
      
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit 'Post It!', class: "btn btn-default" %>
        </div>
      </div>
    <% end %>
  </div>
</div>